print("4 Задание")
import numpy as np

def matrix():
    n = int(input("Размер матрицы: "))
    print("Матрица 1: ")
    m1 = np.array([list(map(float, input().split())) for _ in range(n)])

    print("Матрица 2: ")
    m2 = np.array([list(map(float, input().split())) for _ in range(n)])
    res = np.add(m1, m2)
    print("Сумма")
    print(res)
matrix()


print("5 Задание")
def i():
    s = input("Введите фразу для определения, является ли она палиндромом: ")
    s = s.lower()
    c = " ,.!?-:;\"'()"
    for char in c:
        s = s.replace(char, "")
    if s == s[::-1]:
        return "Да"
    else:
        return "Нет"
print(i())
